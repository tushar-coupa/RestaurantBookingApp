@model RestaurantBookingApp.Models.Restaurant

<h2>Edit Restaurant</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(model => model.Id)

        <label for="Name">Restaurant Name:</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })

        <label for="Address">Address:</label>
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })

        <label for="OpeningTime">Opening Time:</label>
        @Html.TextBoxFor(model => model.OpeningTime, new { @class = "form-control", required = "required", type = "time" })

        <label for="ClosingTime">Closing Time:</label>
        @Html.TextBoxFor(model => model.ClosingTime, new { @class = "form-control", required = "required", type = "time" })
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
}
