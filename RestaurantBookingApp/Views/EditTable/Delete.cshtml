@model RestaurantBookingApp.Models.Table

<h2>Delete Table</h2>
<p>Are you sure you want to delete this table?</p>
<p>Table Number: <strong>@Model.TableNumber</strong></p>
<p>Capacity: <strong>@Model.Capacity</strong></p>
<p>Reservation Duration: <strong>@Model.ReservationDuration</strong></p>

@using (Html.BeginForm("Delete", "EditTable", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
}
